@model IEnumerable<TadaEntries.Models.Employee1>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center"> TADA HISTORY</h2>

<p class="text-right">
    <a class="btn btn-primary" href="@Url.Action("ExportEmployee")">Generate PDF</a>

    </br>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Travel_Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lunch_Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Instrument_Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paid)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Travel_Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lunch_Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instrument_Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paid)
            </td>
            <td>

                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) 



            </td>
        </tr>
    }

</table>
<p>

    <a class="btn btn-primary " href="@Url.Action("Create")"> Create</a>
    <br />
</p>
